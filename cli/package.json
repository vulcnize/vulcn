{
  "name": "vulcn",
  "version": "0.3.0",
  "description": "Modern, fast penetration testing CLI â€” record browser interactions once, replay with security payloads, and find vulnerabilities like XSS and SQLi automatically. A lightweight, pluggable alternative to legacy security scanners.",
  "type": "module",
  "bin": {
    "vulcn": "./vulcn.mjs"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "vulcn.mjs",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist vulcn.mjs LICENSE README.md CHANGELOG.md",
    "typecheck": "tsc --noEmit",
    "prepack": "cp ../vulcn.mjs ../LICENSE ../README.md ../CHANGELOG.md .",
    "postpack": "rm -f vulcn.mjs LICENSE README.md CHANGELOG.md",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "vulcn",
    "security-testing",
    "penetration-testing",
    "pentest",
    "dast",
    "web-security",
    "vulnerability-scanner",
    "security-scanner",
    "xss",
    "xss-detection",
    "sql-injection",
    "sqli",
    "owasp",
    "owasp-top-10",
    "web-application-security",
    "appsec",
    "application-security",
    "security-automation",
    "browser-automation",
    "playwright",
    "security-cli",
    "pentest-tool",
    "pentest-framework",
    "vulnerability-detection",
    "dynamic-analysis",
    "payload-testing",
    "security-audit",
    "web-scanner",
    "bug-bounty"
  ],
  "author": "rawlab",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulcnize/vulcn.git",
    "directory": "cli"
  },
  "homepage": "https://docs.vulcn.dev",
  "bugs": {
    "url": "https://github.com/vulcnize/vulcn/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@vulcn/engine": "workspace:*",
    "@vulcn/driver-browser": "workspace:*",
    "@vulcn/plugin-payloads": "workspace:*",
    "@vulcn/plugin-detect-xss": "workspace:*",
    "@vulcn/plugin-report": "workspace:*",
    "commander": "^13.1.0",
    "chalk": "^5.4.0",
    "ora": "^8.2.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "tsup": "^8.4.0",
    "@types/node": "^22.0.0"
  }
}
