{
  "name": "vulcn-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Vulcn - Security testing recorder & runner",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "oxlint --ignore-pattern '**/dist/**' src cli",
    "lint:fix": "oxlint --fix --ignore-pattern '**/dist/**' src cli",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "check": "pnpm build && pnpm typecheck && pnpm lint && pnpm test",
    "vulcn": "node vulcn.mjs",
    "prepack": "pnpm build",
    "changeset": "changeset",
    "release:version": "changeset version",
    "release:publish": "pnpm build && changeset publish",
    "release:check": "pnpm check && pnpm test:coverage"
  },
  "keywords": [
    "vulcn",
    "security",
    "testing",
    "cli",
    "recorder",
    "xss",
    "sql-injection",
    "penetration-testing"
  ],
  "author": "rawlab",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulcnize/vulcn.git"
  },
  "homepage": "https://rawlab.dev/vulcn",
  "bugs": {
    "url": "https://github.com/vulcnize/vulcn/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@vitest/coverage-v8": "^2.1.0",
    "oxlint": "^0.15.0",
    "prettier": "^3.4.0",
    "vitest": "^2.1.0"
  },
  "vitest": {
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "lcov"
      ],
      "thresholds": {
        "lines": 70,
        "functions": 70,
        "branches": 70,
        "statements": 70
      },
      "include": [
        "src/**/*.ts"
      ],
      "exclude": [
        "src/**/*.test.ts",
        "**/dist/**"
      ]
    },
    "include": [
      "src/**/*.test.ts",
      "cli/**/*.test.ts"
    ],
    "exclude": [
      "**/dist/**",
      "**/node_modules/**"
    ]
  }
}
