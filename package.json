{
  "name": "@vulcn/engine",
  "version": "0.3.0",
  "description": "Security testing engine - Driver-based recording and payload injection for vulnerability detection",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && pnpm -r --filter=\"!@vulcn/engine\" build",
    "build:engine": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist && pnpm -r clean",
    "typecheck": "tsc --noEmit && pnpm -r typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "oxlint --ignore-pattern '**/dist/**' src cli plugins drivers",
    "lint:fix": "oxlint --fix --ignore-pattern '**/dist/**' src cli plugins drivers",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "check": "pnpm build && pnpm typecheck && pnpm lint && pnpm test",
    "vulcn": "node vulcn.mjs",
    "prepublishOnly": "pnpm build:engine",
    "changeset": "changeset",
    "release:version": "changeset version",
    "release:publish": "pnpm build && changeset publish",
    "release:check": "pnpm check && pnpm test:coverage"
  },
  "keywords": [
    "vulcn",
    "security",
    "testing",
    "recorder",
    "driver",
    "plugin",
    "automation",
    "xss",
    "sql-injection",
    "penetration-testing"
  ],
  "author": "rawlab",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulcnize/vulcn.git"
  },
  "homepage": "https://vulcn.dev",
  "bugs": {
    "url": "https://github.com/vulcnize/vulcn/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "playwright": "^1.50.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "oxlint": "^0.15.0",
    "prettier": "^3.4.0",
    "tsup": "^8.5.1",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
