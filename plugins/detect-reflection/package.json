{
  "name": "@vulcn/plugin-detect-reflection",
  "version": "0.2.2",
  "description": "Input reflection detection plugin for Vulcn â€” identifies when attack payloads appear unescaped in HTTP responses, catching output encoding failures and potential injection points.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "vulcn",
    "plugin",
    "reflection",
    "reflection-detection",
    "input-validation",
    "output-encoding",
    "xss",
    "injection-detection",
    "vulnerability-detection",
    "security-testing",
    "penetration-testing",
    "web-security",
    "owasp",
    "dast"
  ],
  "author": "rawlab",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulcnize/vulcn.git",
    "directory": "plugins/detect-reflection"
  },
  "homepage": "https://docs.vulcn.dev",
  "bugs": {
    "url": "https://github.com/vulcnize/vulcn/issues"
  },
  "peerDependencies": {
    "@vulcn/engine": ">=0.3.0"
  },
  "dependencies": {
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vulcn/engine": "workspace:*",
    "playwright": "^1.50.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.0"
  }
}
