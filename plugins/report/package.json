{
  "name": "@vulcn/plugin-report",
  "version": "1.0.0",
  "description": "Security report generation plugin for Vulcn â€” produces HTML dashboards, JSON, YAML, and SARIF v2.1.0 reports for GitHub Code Scanning and CI/CD integration.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "vulcn",
    "plugin",
    "security-report",
    "pentest-report",
    "vulnerability-report",
    "html-report",
    "json-report",
    "sarif",
    "sarif-report",
    "github-code-scanning",
    "security-testing",
    "penetration-testing",
    "security-dashboard",
    "dast",
    "ci-cd",
    "security-automation",
    "appsec"
  ],
  "author": "rawlab",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulcnize/vulcn.git",
    "directory": "plugins/report"
  },
  "homepage": "https://docs.vulcn.dev",
  "bugs": {
    "url": "https://github.com/vulcnize/vulcn/issues"
  },
  "peerDependencies": {
    "@vulcn/engine": "^0.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vulcn/engine": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "yaml": "^2.4.0",
    "zod": "^3.24.0"
  }
}
